{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "outDir": "build",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "declaration": true,
        "lib": [
            "es2015"
        ],
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "typeRoots": ["./src/types", "./node_modules/@types"],
    }
}
